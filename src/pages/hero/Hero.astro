---
import Container from "@components/Container.astro";

import BracketedContent from "@components/BracketedContent.svelte";
---

<Container
	class="text-basics-white h-screen flex flex-col items-start relative"
	bgColor="bg-primary-panther">
	<div class="flex flex-col justify-between w-full mt-36 mb-20 flex-grow z-10">
		<div class="flex justify-between">
			<h1
				class="text-6xl leading-tight 2xl:text-7xl 2xl:leading-tight font-medium tracking-[-0.03em] text-left text-primary-beige">
				<span>Accelerate</span>
				<span class="block">
					<span class="text-primary-coralRed">Growth</span>
					<span>with</span>
				</span>
			</h1>
			<aside>
				<BracketedContent text="THREE.JS, WEB3, WEB2, THREE.JS, WEB" />
			</aside>
		</div>

		<div class="flex justify-between items-end">
			<p
				class="text-base w-[40vw] 3xl:w-[35vw] 2xl:text-xl 3xl:text-2xl font-[84] text-left text-primary-beige/75">
				We donâ€™t just create 3D environments; we build immersive, scalable
				learning and training experiences that help organizations improve
				efficiency, outcomes, and stakeholder engagement.
			</p>
			<div>
				<h2
					class="text-6xl leading-tight 2xl:text-7xl 2xl:leading-tight font-medium tracking-[-0.03em] text-right text-primary-beige">
					<span class="text-primary-coralRed">immersive 3D</span><br />
					gamified learning
				</h2>
			</div>
		</div>

		<div class="flex justify-center items-center md:hidden">
			<p
				class="text-[2rem] font-medium leading-[2.4rem] text-center text-primary-beige">
				Boost team skills with immersive 3D gamified experience
			</p>
		</div>
	</div>

	<div class="absolute inset-0 flex justify-center items-center">
		<div class="relative">
			<div
				class="w-44 h-44 rounded-full flex justify-center items-center bg-gradient-to-b from-primary-panther via-red-500 to-primary-panther">
				<button
					class="text-basics-white py-2 px-4 rounded-full hover:bg-primary-darkRed">
					Click Me
				</button>
			</div>
		</div>
	</div>
</Container>
