---
import { Icon } from "astro-icon";

import Container from "@components/container.astro";
---

<Container
	class="grid lg:grid-cols-1 place-items-center pt-12 pb-8 md:pt-12 md:pb-12">
	<div
		class="flex flex-col justify-center items-center text-center px-4 sm:px-6 lg:px-12">
		<h3
			class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-8 lg:mb-12">
			Custom Scenario Settings
		</h3>
		<p class="text-center text-lg md:text-xl lg:text-2xl md:pt-12">
			A tailored set of requirements crafted to perfectly align with your
			specific goals and objectives.
		</p>
	</div>
	<div
		class="grid grid-cols-1 lg:grid-cols-2 gap-8 pt-12 md:pt-16 pb-8 md:pb-24 px-4 sm:px-6 lg:px-12">
		<div class="flex flex-col items-center text-center p-6">
			<Icon
				class="h-16 w-16 sm:h-20 sm:w-20 lg:h-24 lg:w-24 mb-6"
				name="learn"
			/>
			<h4 class="font-bold text-xl lg:text-2xl mb-2">Learn</h4>
			<p class="text-base lg:text-lg text-slate-500">
				Gain insights and knowledge through engaging, interactive learning
				experiences.
			</p>
		</div>
		<div class="flex flex-col items-center text-center p-6">
			<Icon
				class="h-16 w-16 sm:h-20 sm:w-20 lg:h-24 lg:w-24 mb-6"
				name="build"
			/>
			<h4 class="font-bold text-xl lg:text-2xl mb-2">Build</h4>
			<p class="text-base lg:text-lg text-slate-500">
				Explore our extensive range of ready-to-use gamified simulations, with
				customization options for a truly tailored experience, designed to
				captivate and deliver impactful results.
			</p>
		</div>
	</div>
</Container>
