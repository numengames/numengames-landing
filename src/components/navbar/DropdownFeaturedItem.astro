---
import { Icon } from "astro-icon/components";

const { customClass = "" } = Astro.props;
---

<div class={`w-full h-full ${customClass} hidden`}>
	<div
		class="w-full flex flex-col justify-between items-start gap-3 h-full p-6 px-10 bg-white/5 border border-white/10 rounded-lg">
		<div class="flex flex-col h-full">
			<h2 class="text-lg font-bold">Featured Post</h2>
		</div>

		<a href="/blog">
			<button
				class="w-[7.3125rem] h-[2.5rem] p-2 mt-4 text-basics-white transition-all bg-basics-white/20 rounded border-tl border hover:bg-basics-white/30 lg:mt-0">
				Read More
			</button>
		</a>
	</div>
</div>
