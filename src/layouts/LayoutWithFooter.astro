---
import { SEO } from "astro-seo";

import "../styles/global.css";
import "@fontsource-variable/inter/index.css";
import Footer from "@components/footer.astro";
import ChatComponent from "@components/chat.astro";
import Navbar from "@components/navbar/navbar.astro";

export interface Props {
	title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
	"/opengraph.jpg",
	Astro.site
).toString();

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-QTQ4W4BRJ7"
		></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-QTQ4W4BRJ7");
		</script>

		<!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
		<SEO
			title={title}
			description="Numen Games is a webpage for the company Numen Games S.L"
			canonical={canonicalURL}
			twitter={{
				creator: "@numengames",
				site: "@numengames",
				card: "summary_large_image",
			}}
			openGraph={{
				basic: {
					url: canonicalURL,
					type: "website",
					title: `Numen Games`,
					image: resolvedImageWithDomain,
				},
				image: {
					alt: "",
				},
			}}
		/>
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
		<!-- <ChatComponent />-->
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>
